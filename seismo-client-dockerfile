FROM ubuntu:18.04

RUN apt update -y && \
  DEBIAN_FRONTEND='noninteractive' \
  DEBCONF_NONINTERACTIVE_SEEN='true' \
  apt install -y \
  apache2 \
  build-essential \
  git \
  libcairo2-dev \
  libgif-dev \
  libjpeg-dev \
  libpango1.0-dev \
  librsvg2-dev \
  mongodb \
  nodejs \
  npm \
  pkg-config

RUN useradd \
  --create-home \
  --user-group \
  seismo

RUN npm install \
  --global \
  bower

WORKDIR /home/seismo

COPY submodules/seismogram-app seismogram-app

COPY patches/ patches/

COPY run-seismo-server.sh run-seismo-server.sh

RUN chown --recursive 'seismo:seismo' '/home/seismo'

USER seismo

RUN patch 'seismogram-app/data-tools/mongo-import.sh' 'patches/mongo-import.sh.patch'

WORKDIR /home/seismo/seismogram-app/data-tools

RUN npm install

RUN nodejs jsonize.js

WORKDIR /home/seismo/seismogram-app/server

RUN npm install

WORKDIR /home/seismo/seismogram-app/client

RUN GIT_DIR='/home/seismo/seismogram-app/submodules/seismogram-app' \
  bower install

USER root

COPY seismo-client-apache.conf /etc/apache2/sites-available/

RUN a2dissite 000-default

RUN a2ensite seismo-client-apache

USER seismo

CMD [ "/home/seismo/run-seismo-app.sh" ]
