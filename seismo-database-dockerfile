FROM ubuntu:18.04

RUN apt update -y && \
  DEBIAN_FRONTEND='noninteractive' \
  DEBCONF_NONINTERACTIVE_SEEN='true' \
  apt install -y \
  apache2 \
  build-essential \
  git \
  libcairo2-dev \
  libgif-dev \
  libjpeg-dev \
  libpango1.0-dev \
  librsvg2-dev \
  mongodb \
  nodejs \
  npm \
  pkg-config

RUN useradd \
  --create-home \
  --user-group \
  seismo

WORKDIR /home/seismo

USER seismo

RUN mkdir mongo-seismo

CMD [ "mongod", "--dbpath", "/home/seismo/mongo-seismo" ]
