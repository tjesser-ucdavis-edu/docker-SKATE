FROM ubuntu:16.04

RUN apt update -y && apt install -y \
  apache2 \
  build-essential \
  git \
  libcairo2-dev \
  libgif-dev \
  libjpeg-dev \
  libpango1.0-dev \
  librsvg2-dev \
  mongodb \
  nodejs \
  npm \
  pkg-config

RUN adduser \
  --quiet \
  seismo

RUN ln -s \
  /usr/bin/nodejs \
  /usr/bin/node

USER seismo

WORKDIR /home/seismo

RUN mkdir mongo-seismo

CMD [ "mongod", "--dbpath", "/home/seismo/mongo-seismo" ]
